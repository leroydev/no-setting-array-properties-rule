{
    "compilerOptions": {
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": false,
      "declaration": true,
      "lib": [
        "es6",
        "dom",
        "scripthost"
      ],
      "module": "commonjs",
      "outDir": "dist/src",
      "removeComments": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": [
      "src"
    ]
  }